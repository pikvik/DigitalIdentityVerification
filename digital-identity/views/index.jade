extends layout
block content
  div.col-xs-12.no_padding.headerSection
    div.navbar.navbar-inverse.menulist
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href='#') Digital Identity Application
  
  div.col-xs-12.no_padding.bodySection
    div.col-xs-12.addGovernmentPage
      h4(style='background-color:  black; color:  white;  margin-top: 5px;')
        label(style='margin: 10px 0 10px 40px;')
          | Add Official
      form#addOfficial.signup(action='/api/official',method='POST', style='margin: 50px 0 0px 50px;')
    
        div.col-xs-12
          div.col-xs-12
            label(for='name') Official Name:
          div.col-xs-6
            input#name.form-control(type='text', placeholder='Enter Given Name and Last Name' name='name' required)

          div.col-xs-12
            label(for='id') Official ID:
          div.col-xs-6
            input#name.form-control(type='text', placeholder='ID' name='id' required)

          div.col-xs-12
            label(for='designation') Designation:
          div.col-xs-6
            input#name.form-control(type='text', placeholder='Designation' name='designation' required)

        div.col-xs-11(style='margin-top:30px; padding-left:30px;')
          button#submit-btn.btn.btn-primary(type='submit', value='Submit') SUBMIT

    div.col-xs-offset-4.col-xs-4
      p#result

  div.col-xs-12.no_padding.footerSection
    label.control-label 
